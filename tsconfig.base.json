{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "api-interfaces": ["modules/shared/api-interfaces/src/index.ts"],
      "appwrite": ["modules/shared/appwrite/src/index.ts"],
      "project-board/data-access": [
        "modules/project-board/data-access/src/index.ts"
      ],
      "project-board/feature/project-board": [
        "modules/project-board/feature/project-board/src/index.ts"
      ],
      "project-board/ui/list-creator": [
        "modules/project-board/ui/list-creator/src/index.ts"
      ],
      "project-board/ui/project-board-canvas": [
        "modules/project-board/ui/project-board-canvas/src/index.ts"
      ],
      "project-board/ui/project-header": [
        "modules/project-board/ui/project-header/src/index.ts"
      ],
      "project-board/ui/task-card": [
        "modules/project-board/ui/task-card/src/index.ts"
      ],
      "project-board/ui/task-creator": [
        "modules/project-board/ui/task-creator/src/index.ts"
      ],
      "project-board/ui/task-list": [
        "modules/project-board/ui/task-list/src/index.ts"
      ],
      "shared/data-access/api": ["modules/shared/data-access/api/src/index.ts"],
      "shared/ui/header": ["modules/shared/ui/header/src/index.ts"],
      "task-editor/feature/task-editor": [
        "modules/task-editor/feature/task-editor/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
